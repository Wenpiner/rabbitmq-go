# 高并发压力测试 Dockerfile
FROM golang:1.21-alpine AS builder

WORKDIR /build

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o /app/stability-high-concurrency ./test/stability/high-concurrency

FROM alpine:latest

RUN apk --no-cache add ca-certificates tzdata

WORKDIR /app

COPY --from=builder /app/stability-high-concurrency .

EXPOSE 8080

CMD ["./stability-high-concurrency"]

