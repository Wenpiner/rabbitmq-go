# 内存泄漏检测测试 Dockerfile
FROM golang:1.21-alpine AS builder

WORKDIR /build

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o /app/stability-memory-leak ./test/stability/memory-leak

FROM alpine:latest

RUN apk --no-cache add ca-certificates tzdata

WORKDIR /app

COPY --from=builder /app/stability-memory-leak .

EXPOSE 8080 6060

CMD ["./stability-memory-leak"]

